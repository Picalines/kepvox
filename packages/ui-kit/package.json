{
    "name": "@repo/ui-kit",
    "version": "0.1.0",
    "private": true,
    "sideEffects": ["**/*.css"],
    "files": ["dist"],
    "exports": {
        "./style.css": "./dist/index.css",
        "./classnames": "./src/lib/classnames.ts",
        "./components/*": "./src/components/*/index.ts"
    },
    "scripts": {
        "build:styles": "postcss ./src/styles/index.css -o ./dist/index.css",
        "build:storybook": "storybook build",
        "dev:storybook": "concurrently 'pnpm dev:storybook:server' 'pnpm dev:storybook:styles'",
        "dev:storybook:server": "storybook dev -p 6006",
        "dev:storybook:styles": "postcss -w ./src/styles/index.css -o ./.storybook/index.css"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^1.6.1",
        "@repo/tailwind-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@storybook/addon-essentials": "^8.2.6",
        "@storybook/addon-interactions": "^8.2.6",
        "@storybook/addon-links": "^8.2.6",
        "@storybook/react": "^8.2.6",
        "@storybook/react-vite": "^8.2.6",
        "@storybook/test": "^8.2.6",
        "@types/react": "^18.3.3",
        "concurrently": "^8.2.2",
        "postcss-import": "^16.1.0",
        "storybook": "^8.2.6",
        "tailwindcss": "^3.4.7",
        "typescript": "^5.5.4",
        "vite": "^5.3.5"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.1.0",
        "autoprefixer": "^10.4.19",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "postcss": "^8.4.40",
        "postcss-cli": "^11.0.0",
        "react": "^18.3.1",
        "tailwind-merge": "^2.4.0"
    }
}
