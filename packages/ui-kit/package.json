{
    "$schema": "https://json.schemastore.org/package",
    "name": "@repo/ui-kit",
    "version": "0.1.0",
    "private": true,
    "sideEffects": ["**/*.css"],
    "scripts": {
        "dev": "pnpm run dev:storybook",
        "dev:storybook": "pnpm run dev:storybook:server",
        "dev:unit": "vitest watch",
        "dev:storybook:server": "storybook dev -p 6006 --no-open",
        "playwright:install": "playwright install chromium --with-deps",
        "test:unit": "vitest run",
        "test:screen": "STORYBOOK_URL=http://127.0.0.1:6006 playwright test",
        "test:screen:update": "pnpm run test:screen --update-snapshots"
    },
    "exports": {
        "./style.css": "./src/styles/index.css",
        "./classnames": "./src/lib/classnames.ts",
        "./slots": "./src/lib/slots/index.ts",
        "./hocs": "./src/lib/hocs/index.ts",
        "./types": "./src/lib/types.ts",
        "./components/*": "./src/components/*/index.ts",
        "./icons": "./src/icons/index.ts",
        "./tailwind-config": "./tailwind.config.ts"
    },
    "imports": {
        "#lib/classnames": "./src/lib/classnames.ts",
        "#lib/slots": "./src/lib/slots/index.ts",
        "#lib/hocs": "./src/lib/hocs/index.ts",
        "#icons": "./src/icons/index.ts",
        "#components/*": "./src/components/*/index.ts"
    },
    "devDependencies": {
        "@repo/tailwind-config": "workspace:*",
        "@repo/ts-config": "workspace:*",
        "@repo/ui-test": "workspace:*",
        "@storybook/addon-essentials": "catalog:",
        "@storybook/addon-interactions": "catalog:",
        "@storybook/addon-links": "catalog:",
        "@storybook/addon-themes": "catalog:",
        "@storybook/react": "catalog:",
        "@storybook/react-vite": "catalog:",
        "@storybook/test": "catalog:",
        "@testing-library/react": "catalog:",
        "@testing-library/user-event": "catalog:",
        "@types/postcss-import": "catalog:",
        "@types/react": "catalog:",
        "@vitejs/plugin-react": "catalog:",
        "autoprefixer": "catalog:",
        "jsdom": "catalog:",
        "playwright": "catalog:",
        "postcss": "catalog:",
        "postcss-import": "catalog:",
        "storybook": "catalog:",
        "tailwindcss": "catalog:",
        "vite": "catalog:",
        "vitest": "catalog:"
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-popover": "^1.1.4",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-toggle": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.427.0",
        "postcss-cli": "^11.0.0",
        "react": "catalog:",
        "react-dom": "catalog:",
        "react-resizable-panels": "^2.1.7",
        "tailwind-merge": "^2.4.0"
    }
}
