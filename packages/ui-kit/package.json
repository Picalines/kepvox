{
    "name": "@repo/ui-kit",
    "version": "0.1.0",
    "private": true,
    "sideEffects": ["**/*.css"],
    "files": ["dist"],
    "exports": {
        "./style.css": "./dist/index.css",
        "./classnames": "./src/lib/classnames.ts",
        "./slots": "./src/lib/slots/index.ts",
        "./types": "./src/lib/types.ts",
        "./components/*": "./src/components/*/index.ts",
        "./icons": "./src/icons/index.ts"
    },
    "scripts": {
        "build:styles": "postcss ./src/styles/index.css -o ./dist/index.css",
        "build:storybook": "storybook build",
        "dev:storybook": "concurrently 'pnpm dev:storybook:server' 'pnpm dev:storybook:styles'",
        "dev:storybook:server": "storybook dev -p 6006 --no-open",
        "dev:storybook:styles": "postcss -w ./src/styles/index.css -o ./.storybook/index.css"
    },
    "devDependencies": {
        "@repo/tailwind-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@storybook/addon-essentials": "^8.2.7",
        "@storybook/addon-interactions": "^8.2.7",
        "@storybook/addon-links": "^8.2.7",
        "@storybook/addon-themes": "^8.2.7",
        "@storybook/react": "^8.2.7",
        "@storybook/react-vite": "^8.2.7",
        "@storybook/test": "^8.2.7",
        "@types/react": "^18.3.3",
        "concurrently": "^8.2.2",
        "postcss-import": "^16.1.0",
        "storybook": "^8.2.7",
        "tailwindcss": "^3.4.7",
        "typescript": "^5.5.4",
        "vite": "^5.3.5"
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.1",
        "@radix-ui/react-popover": "^1.1.1",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-toggle": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "autoprefixer": "^10.4.19",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.427.0",
        "postcss": "^8.4.40",
        "postcss-cli": "^11.0.0",
        "react": "^18.3.1",
        "react-resizable-panels": "^2.0.22",
        "tailwind-merge": "^2.4.0"
    }
}
