{
    "$schema": "https://json.schemastore.org/package",
    "name": "@repo/ui-kit",
    "version": "0.1.0",
    "private": true,
    "sideEffects": ["**/*.css"],
    "scripts": {
        "dev": "pnpm dev:storybook",
        "dev:storybook": "pnpm dev:storybook:server",
        "dev:storybook:server": "storybook dev -p 6006 --no-open"
    },
    "exports": {
        "./style.css": "./src/styles/index.css",
        "./classnames": "./src/lib/classnames.ts",
        "./slots": "./src/lib/slots/index.ts",
        "./hocs": "./src/lib/hocs/index.ts",
        "./types": "./src/lib/types.ts",
        "./components/*": "./src/components/*/index.ts",
        "./icons": "./src/icons/index.ts",
        "./tailwind-config": "./tailwind.config.ts"
    },
    "imports": {
        "#lib/classnames": "./src/lib/classnames.ts",
        "#lib/slots": "./src/lib/slots/index.ts",
        "#lib/hocs": "./src/lib/hocs/index.ts",
        "#icons": "./src/icons/index.ts",
        "#components/*": "./src/components/*/index.ts"
    },
    "devDependencies": {
        "@repo/tailwind-config": "workspace:*",
        "@repo/ts-config": "workspace:*",
        "@storybook/addon-essentials": "^8.4.7",
        "@storybook/addon-interactions": "^8.4.7",
        "@storybook/addon-links": "^8.4.7",
        "@storybook/addon-themes": "^8.4.7",
        "@storybook/react": "^8.4.7",
        "@storybook/react-vite": "^8.4.7",
        "@storybook/test": "^8.4.7",
        "@types/postcss-import": "^14.0.3",
        "@types/react": "^19.0.0",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.47",
        "postcss-import": "^16.1.0",
        "storybook": "^8.4.7",
        "tailwindcss": "^3.4.7",
        "vite": "^5.3.5"
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-popover": "^1.1.4",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-toggle": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.427.0",
        "postcss-cli": "^11.0.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-resizable-panels": "^2.1.7",
        "tailwind-merge": "^2.4.0"
    }
}
