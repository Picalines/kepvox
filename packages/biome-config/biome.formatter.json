{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 120,
        "lineEnding": "lf"
    },

    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "jsxQuoteStyle": "double",
            "trailingCommas": "all",
            "bracketSpacing": true,
            "arrowParentheses": "asNeeded"
        }
    },

    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
