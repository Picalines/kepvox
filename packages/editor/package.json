{
    "$schema": "https://json.schemastore.org/package",
    "name": "@repo/editor",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": "./src/index.ts",
        "./meta": "./src/meta/index.ts"
    },
    "scripts": {
        "dev:storybook": "storybook dev -p 6004 --no-open",
        "test:screen": "PLAYWRIGHT_SERVER=dev:storybook PLAYWRIGHT_PORT=6004 playwright test",
        "test:screen:update": "pnpm run test:screen --update-snapshots",
        "lint:ts": "tsc --noEmit"
    },
    "imports": {
        "#components/*": "./src/components/*/index.ts",
        "#model": "./src/model/index.ts",
        "#meta": "./src/meta/index.ts",
        "#__mock__/*": "./src/__mock__/*/index.ts"
    },
    "dependencies": {
        "@repo/common": "workspace:*",
        "@repo/synth": "workspace:*",
        "@repo/ui-kit": "workspace:*",
        "@withease/factories": "catalog:",
        "@xyflow/react": "^12.4.4",
        "effector": "catalog:",
        "effector-react": "catalog:",
        "immer": "^10.1.1",
        "nanoid": "catalog:",
        "patronum": "catalog:"
    },
    "peerDependencies": {
        "react": "catalog:",
        "react-dom": "catalog:"
    },
    "devDependencies": {
        "@repo/storybook-config": "workspace:*",
        "@repo/tailwind-config": "workspace:*",
        "@repo/test-screen": "workspace:*",
        "@repo/ts-config": "workspace:*",
        "@repo/vite-config": "workspace:*",
        "@storybook/react-vite": "catalog:",
        "@testing-library/react": "catalog:",
        "@testing-library/user-event": "catalog:",
        "@types/react": "catalog:",
        "jsdom": "catalog:",
        "storybook": "catalog:",
        "typescript": "catalog:"
    }
}
