{
    "$schema": "https://json.schemastore.org/package",
    "name": "social",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "turbo run --ui=stream dev:next dev:drizzle-kit dev:docker dev:storybook",
        "dev:next": "NODE_ENV=development next dev -p 3002",
        "dev:drizzle-kit": "NODE_ENV=development drizzle-kit studio --port 3032",
        "dev:storybook": "NODE_ENV=development storybook dev -p 6005 --no-open",
        "dev:docker": "NODE_ENV=development docker compose -f compose.dev.yaml up",
        "dev:db:migrate": "NODE_ENV=development drizzle-kit generate && NODE_ENV=development drizzle-kit push",
        "dev:unit": "vitest watch",
        "build": "NODE_ENV=production IS_BUILD=true next build",
        "start": "NODE_ENV=production next start -p 80",
        "start:db:migrate": "NODE_ENV=production drizzle-kit push",
        "ts:check": "tsc --noEmit",
        "test:unit": "vitest run",
        "playwright:install": "playwright install chromium --with-deps",
        "playwright:server": "pnpm run dev:storybook",
        "gen:better-auth-schema": "NODE_ENV=development pnpm dlx @better-auth/cli@latest generate --config ./src/shared/auth-server/auth-server.ts"
    },
    "imports": {
        "#screens/*": "./src/screens/*/index.ts",
        "#widgets/*": "./src/widgets/*/index.ts",
        "#shared/*": "./src/shared/*/index.ts",
        "#shared/components/*": "./src/shared/components/*/index.ts"
    },
    "dependencies": {
        "@effector/next": "catalog:",
        "@next/env": "catalog:",
        "@radix-ui/react-avatar": "^1.1.3",
        "@repo/common": "workspace:*",
        "@repo/editor": "workspace:*",
        "@repo/synth": "workspace:*",
        "@repo/ui-kit": "workspace:*",
        "@types/pg": "^8.11.11",
        "@withease/factories": "catalog:",
        "better-auth": "^1.2.4",
        "client-only": "catalog:",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.41.0",
        "effector": "catalog:",
        "effector-react": "catalog:",
        "next": "catalog:",
        "next-themes": "^0.4.6",
        "patronum": "catalog:",
        "pg": "^8.14.1",
        "react": "catalog:",
        "react-dom": "catalog:",
        "server-only": "catalog:",
        "use-sync-external-store": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@effector/swc-plugin": "catalog:",
        "@playwright/test": "catalog:",
        "@repo/next-config": "workspace:*",
        "@repo/playwright-config": "workspace:*",
        "@repo/storybook-config": "workspace:*",
        "@repo/tailwind-config": "workspace:*",
        "@repo/test-screen": "workspace:*",
        "@repo/ts-config": "workspace:*",
        "@repo/vite-config": "workspace:*",
        "@tailwindcss/postcss": "catalog:",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "drizzle-kit": "^0.30.5",
        "motion": "catalog:",
        "playwright": "catalog:",
        "storybook": "catalog:",
        "tailwindcss": "catalog:",
        "tw-animate-css": "catalog:",
        "typescript": "catalog:",
        "vite": "catalog:",
        "vitest": "catalog:"
    }
}
