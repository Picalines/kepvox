{
    "$schema": "https://turbo.build/schema.json",

    "ui": "tui",

    "globalPassThroughEnv": ["TMPDIR"],

    "tasks": {
        "lint": { "dependsOn": ["//#lint:biome", "lint:ts"] },
        "lint:ts": { "dependsOn": ["^lint:ts"] },
        "//#lint:biome": {},
        "//#lint:fix": { "cache": false },
        "//#lint:fix-unsafe": { "cache": false },

        "start": {
            "persistent": true,
            "cache": false,
            "dependsOn": ["build", "start:setup"]
        },
        "start:setup": {},

        "build": {
            "outputs": ["out/**", ".next/**", "!.next/cache/**"],
            "dependsOn": ["^build", "build:setup"]
        },
        "build:setup": {},

        "test:unit": {},
        "test:screen": {
            "cache": false,
            "dependsOn": ["//#test:screen:install-playwright", "^build", "test:screen:setup"]
        },
        "test:screen:update": {
            "cache": false,
            "dependsOn": ["//#test:screen:install-playwright", "^build", "test:screen:setup"]
        },
        "test:screen:setup": {},
        "//#test:screen:install-playwright": { "cache": false },

        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"],
            "with": ["dev:next", "dev:storybook", "dev:unit"]
        },
        "dev:unit": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:storybook": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:next": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:setup": {}
    }
}
