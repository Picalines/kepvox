{
    "$schema": "https://turbo.build/schema.json",

    "ui": "tui",

    "globalPassThroughEnv": ["TMPDIR"],

    "tasks": {
        "start": {
            "persistent": true,
            "cache": false,
            "dependsOn": ["build", "start:setup"]
        },
        "start:setup": {},

        "build": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "dependsOn": ["^build", "build:setup"]
        },
        "build:setup": {},

        "test:unit": {},
        "test:screen": {
            "cache": false,
            "dependsOn": ["^build", "playwright:install", "test:screen:setup"]
        },
        "test:screen:update": {
            "cache": false,
            "dependsOn": ["^build", "playwright:install", "test:screen:setup"]
        },
        "test:screen:setup": {},
        "playwright:install": {
            "cache": false
        },

        "ts:check": {},
        "//#lint": {},
        "//#ci:check": {},

        "//#format": {},
        "//#fix": {},
        "//#fix-unsafe": {},

        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:unit": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:storybook": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:next": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "dev:setup"]
        },
        "dev:setup": {}
    }
}
